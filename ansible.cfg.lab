# Lab-only configuration override
# Usage: ANSIBLE_CONFIG=ansible.cfg.lab ansible-playbook ...
[defaults]
inventory = inventories/lab/hosts.ini
roles_path = roles
collections_paths = ./.collections
stdout_callback = yaml
force_color = true
nocows = 1
interpreter_python = auto_silent
# ONLY for isolated lab environments
host_key_checking = False
timeout = 30
log_path = ./logs/ansible.log

[privilege_escalation]
become = True
become_ask_pass = False

[ssh_connection]
ssh_args = -o ControlMaster=auto -o ControlPersist=60s -o ServerAliveInterval=60
pipelining = True
